<html>
    <head>
        <script src="/jquery-3.1.1.min.js"></script>
        <link rel="stylesheet" href="/semantic.min.css">
        <script src="/semantic.min.js"></script>
        <link rel="stylesheet" href="chessground.css"></link>
        <link rel="stylesheet" href="theme.css"></link>
    </head>
    <body>
        <div class="ui inverted segment">
            <div class="blue merida">
                <div id="chessboard" class="cg-board-wrap" style="width: 600px; height: 600px"></div>
                <div class="ui inverted statistic" style="display: block; margin-left: auto; margin-right: auto; margin-top: 40px;">
                    <div class="label">
                        Mate in
                    </div>
                    <div class="value" id="mate">
                        -
                    </div>
                </div>
            </div>
        </div>
        <form class="ui form" style="width: 50%; display: block; margin-left: auto; margin-right: auto; margin-top: 40px;">
            <div class="field">
                <label>Target Field</label>
                <input id="target" name="target" placeholder="a1"></input>
            </div>
            <div class="field">
                <label>FEN</label>
                <input id="fen" name="fen" placeholder="8/N7/8/8/8/k7/NN6/K7 b - -"></input>
            </div>
            <div class="field">
                <div id="move" class="ui checkbox">
                    <input type="checkbox" name="move"></input>
                    <label>White to move</label>
                </div>
            </div>
        </form>

        <script src="bundle.js"></script>
    </body>

</html>